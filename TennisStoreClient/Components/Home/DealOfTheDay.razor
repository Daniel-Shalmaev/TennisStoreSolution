<div class="product-featured">
    <h2 class="title">דיל היום</h2>
    <div class="showcase-wrapper has-scrollbar">
        @foreach (var product in FeaturedProducts)
        {
            <div class="showcase-container">
                <div class="showcase">
                    <div class="showcase-banner">
                        <img src="@product.ImageUrl" alt="@product.AltText" class="showcase-img">
                    </div>
                    <div class="showcase-content">
                        <div class="showcase-rating">
                            @for (int i = 0; i < Math.Floor((decimal)product.Rating); i++)
                            {
                                <i class="fa-solid fa-star"></i>
                            }
                            @if (product.Rating % 1 != 0)
                            {
                                <i class="fa-solid fa-star-half-stroke fa-flip-horizontal"></i>
                            }
                            @for (int i = (int)Math.Ceiling((decimal)product.Rating); i < 5; i++)
                            {
                                <i class="fa-regular fa-star"></i>
                            }
                        </div>
                        <a href="#">
                            <h3 class="showcase-title">@product.Title</h3>
                        </a>
                        <p class="showcase-desc">@product.Description</p>
                        <div class="price-box">
                            <p class="price">@product.Price</p>
                            <del>@product.OriginalPrice</del>
                        </div>
                        <button class="add-cart-btn">הוסף לעגלה</button>
                        <div class="showcase-status">
                            <div class="wrapper">
                                <p>נמכרו: <b>@product.Sold</b></p>
                                <p>זמין במלאי: <b>@product.Available</b></p>
                            </div>
                            <div class="showcase-status-bar"></div>
                        </div>
                        <div class="countdown-box">
                            <p class="countdown-desc">ההצעה נגמרת בעוד:</p>
                            <div class="countdown">
                                @foreach (var time in product.Countdown)
                                {
                                    <div class="countdown-content">
                                        <p class="display-number">@time.Value</p>
                                        <p class="display-text">@time.Key</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

